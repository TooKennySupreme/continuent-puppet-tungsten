EXPORT WORKGIT="https://github.com/narmitag/continuent-puppet-tungsten.git"
for os in centos5 ubuntu.12.04 wheezy centos6  squeeze ubuntu.10.04 ubuntu.14.04
do
  echo "Operating System =  $os"
  for f in puppet/*.pp
  do
   rm $os/puppet.pp
   cp $f $os/puppet.pp
   echo " ... $f"
   docker build --no-cache -t="continuent/$os" $os | grep Error: | grep -v Unsupported
  done
done

for os in  centos7
do
  echo "Operating System =  $os"
  for f in puppet_centos7/*.pp
  do
   rm $os/puppet.pp
   cp $f $os/puppet.pp
   echo " ... $f"
   docker build --no-cache -t="continuent/$os" $os | grep Error: | grep -V Unsupported
  done
done
