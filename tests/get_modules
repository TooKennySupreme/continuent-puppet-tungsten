
BUILDDIR=$1
WORKGIT=$2
RPMPREFIX=$3
DEBPREFIX=$4

rm -rf $BUILDDIR/puppet/modules/*
puppet module install continuent-tungsten --modulepath=$BUILDDIR/puppet/modules/
rm -rf $BUILDDIR/puppet/modules/tungsten

if [ $WORKGIT == 'local' ]
then
  mkdir $BUILDDIR/puppet/modules/tungsten/
  cp -r ../* $BUILDDIR/puppet/modules/tungsten/
else
  git clone $WORKGIT $BUILDDIR/puppet/modules/tungsten
fi
mkdir $BUILDDIR/puppet/rpm/

#wget -q ${DEBPREFIX}_all.deb -O $BUILDDIR/puppet/rpm/ct.deb
#wget -q ${RPMPREFIX}.noarch.rpm -O $BUILDDIR/puppet/rpm/ct.rpm
#wget -q ${RPMPREFIX}.RHEL5.noarch.rpm -O $BUILDDIR/puppet/rpm/ct.rhel5.rpm

cp ${DEBPREFIX}_all.deb  $BUILDDIR/puppet/rpm/ct.deb
cp ${RPMPREFIX}.noarch.rpm  $BUILDDIR/puppet/rpm/ct.rpm
cp ${RPMPREFIX}.RHEL5.noarch.rpm  $BUILDDIR/puppet/rpm/ct.rhel5.rpm
