[defaults]
user=tungsten
home-directory=/opt/continuent
mysql-connectorj-path=<%= scope['::continuent_install::mysqljLocation'] %>
datasource-user=<%= scope['::continuent_install::masterUser'] %>
datasource-password=<%= scope['::continuent_install::masterPassword'] %>
datasource-port=<%= scope['::continuent_install::mysqlPort'] %>
connector-listen-port=<%= scope['::continuent_install::connectorPort'] %>
datasource-log-directory=/var/lib/mysql
connector-user=<%= scope['::continuent_install::appUser'] %>
connector-password=<%= scope['::continuent_install::appPassword'] %>
<% if scope['::continuent_install::provisionNode']  %>
start-and-report=false
<% else %>
start-and-report=true
<% end %>


<% scope['::continuent_install::clusterData'].each_pair do |key, cluster| %>
[<%= key %>]
members=<%= cluster['members'] %>
connectors=<%= cluster['connectors'] %>
master=<%= cluster['master'] %>
<% if cluster['relay-source']  %>
relay-source=<%= cluster['relay-source'] %>
<% end %>
<% end %>


<% if scope['::continuent_install::compositeName'] != '' %>
[<%= scope['::continuent_install::compositeName'] %>]
composite-datasources=<%= scope['::continuent_install::compositeDS'] %>
<% end %>